#  풀이에 걸린 시간 : 7분

import math

def solution(n,a,b):
    answer = 0

    rounds = 1
    while True:
        a = math.ceil(a/2)
        b = math.ceil(b/2)
        if a == b:
            answer = rounds
            break
        rounds += 1

    return answer
